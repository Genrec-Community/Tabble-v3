# Tabble-v3 Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Application Settings
SECRET_KEY=your_secret_key_here_change_in_production
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Configuration
DATABASE_NAME=Tabble.db
DATABASE_URL=sqlite:///./Tabble.db

# Firebase Configuration (for phone OTP authentication)
FIREBASE_CREDENTIALS_PATH=app/tabble-v1-firebase-adminsdk-fbsvc-8024adcbdf.json

# File Upload Configuration
UPLOAD_DIR=app/static/images
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_SESSIONS_PER_USER=5

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Backend API Configuration
REACT_APP_API_BASE_URL=http://localhost:8000

# Application Environment
NODE_ENV=development

# Firebase Configuration (optional - for client-side auth)
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id

# UI Configuration
REACT_APP_APP_NAME=Tabble
REACT_APP_DEFAULT_THEME=dark
REACT_APP_PRIMARY_COLOR=#FFA500
REACT_APP_SECONDARY_COLOR=#000000

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DEMO_MODE=false

# Performance Configuration
REACT_APP_QUERY_CACHE_TIME=300000
REACT_APP_IMAGE_LAZY_LOADING=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Render Deployment
RENDER=true
PYTHON_VERSION=3.11.9

# Production URLs (update when deploying)
PRODUCTION_API_URL=https://your-render-app.onrender.com
PRODUCTION_FRONTEND_URL=https://your-frontend-domain.com

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./test.db
ENABLE_TEST_COVERAGE=true

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Email Configuration (for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Payment Configuration (for future features)
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...

# Analytics Configuration (for future features)
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# MIXPANEL_TOKEN=your_mixpanel_token

# Monitoring Configuration (for future features)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# LOGTAIL_TOKEN=your_logtail_token